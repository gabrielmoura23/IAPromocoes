@model IAPromocoes.Application.ViewModels.ProdutoPrecoViewModel


    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">Cadastrar Preço</h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("Cadastrar", "ProdutoPreco", FormMethod.Post, new { @class = "horizontal-form" }))
            {
                <div id="cadastrarPreco">
                    <div class="scroller" style="height:300px" data-always-visible="1" data-rail-visible1="1">


                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.IdProduto)
                        @Html.HiddenFor(model => model.IdProdutoPreco, new { @Value = Guid.NewGuid() })
                        @Html.HiddenFor(model => model.IdUsuarioCadastro, new { @Value = Guid.NewGuid() })
                        @Html.HiddenFor(model => model.DtCadastro, new { @Value = System.DateTime.Now.ToString("dd/MM/yyyy") })
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Descrição</label>
                                        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @placeholder = "Descrição" } })
                                        <span class="help-block">
                                            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Valor Unitário</label>
                                        @Html.EditorFor(model => model.ValorUnitario, new { htmlAttributes = new { @id = "txtValorUnitario", @class = "form-control", @placeholder = "Descrição" } })
                                        <span class="help-block">
                                            @Html.ValidationMessageFor(model => model.ValorUnitario, "", new { @class = "text-danger" })
                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Instruções Valor</label>
                                        @Html.EditorFor(model => model.InstrucoesValor, new { htmlAttributes = new { @class = "form-control", @placeholder = "http://" } })
                                        <span class="help-block">
                                            @Html.ValidationMessageFor(model => model.InstrucoesValor, "", new { @class = "text-danger" })
                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Instruções Outros</label>
                                        @Html.EditorFor(model => model.InstrucoesOutros, new { htmlAttributes = new { @class = "form-control", @placeholder = "Atração" } })
                                        <span class="help-block">
                                            @Html.ValidationMessageFor(model => model.InstrucoesOutros, "", new { @class = "text-danger" })
                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Quantidade</label>
                                        @Html.EditorFor(model => model.QtdProduto, new { htmlAttributes = new { @class = "form-control", @placeholder = "Dia" } })
                                        <span class="help-block">
                                            @Html.ValidationMessageFor(model => model.QtdProduto, "", new { @class = "text-danger" })
                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Ativo?</label>
                                        <div class="form-group">
                                            <label class="radio-inline">
                                                @Html.RadioButtonFor(model => model.FlgAtivo, true, new { @checked = "checked" }) Sim
                                            </label>
                                            <label class="radio-inline">
                                                @Html.RadioButtonFor(model => model.FlgAtivo, false) Não
                                            </label>
                                            @Html.ValidationMessageFor(model => model.FlgAtivo, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" class="btn default">Fechar</button>
                        <button type="submit" class="btn green">Cadastrar</button>
                    </div>
                </div>
            }

        </div>
    </div>
