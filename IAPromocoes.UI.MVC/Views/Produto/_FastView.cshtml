@model IAPromocoes.Application.ViewModels.ProdutoViewModel

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    </div>
    <div class="modal-body">
        <div id="product-pop-up">
            <div class="product-page product-pop-up">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-3">
                        <div class="product-main-image">
                            <img src="~/assets/frontend/pages/img/products/model1.jpg" alt="Cool green dress with red bell" class="img-responsive">
                        </div>
                        <div class="product-other-images">
                            <a href="#" class="active"><img alt="Produto Abc" src="~/assets/frontend/pages/img/products/model1.jpg"></a>
                            <a href="#"><img alt="Produto Abc" src="~/assets/frontend/pages/img/products/model1.jpg"></a>
                            <a href="#"><img alt="Produto Abc" src="~/assets/frontend/pages/img/products/model1.jpg"></a>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-9">
                        <h2>@Html.DisplayFor(model => model.Descricao)</h2>
                        <div class="price-availability-block clearfix">
                            <div class="price">
                                <strong><span>R$</span>@Html.DisplayFor(model => model.PrecoTexto)</strong>
                                <em>R$<span>@Html.DisplayFor(model => model.PrecoTexto)</span></em>
                            </div>
                            <div class="availability">
                                Disponibilidade: <strong>Em Stock</strong>
                            </div>
                        </div>
                        <div class="description">
                            <p>
                                Lorem ipsum dolor ut sit ame dolore  adipiscing elit, sed nonumy nibh sed euismod laoreet dolore magna aliquarm erat volutpat
                                Nostrud duis molestie at dolore.
                            </p>
                        </div>
                        <div class="product-page-options">
                            <div class="pull-left">
                                <label class="control-label">Tamanho:</label>
                                <select class="form-control input-sm">
                                    <option>L</option>
                                    <option>M</option>
                                    <option>XL</option>
                                </select>
                            </div>
                            <div class="pull-left">
                                <label class="control-label">Cor:</label>
                                <select class="form-control input-sm">
                                    <option>Vermelho</option>
                                    <option>Azul</option>
                                    <option>Preto</option>
                                </select>
                            </div>
                        </div>
                        <div class="product-page-cart">
                            <div class="product-quantity">
                                <input id="product-quantity" type="text" value="1" readonly name="product-quantity" class="form-control input-sm">
                            </div>
                            <button class="btn btn-primary" type="submit">Comprar</button>
                            <a href="/Produto/Detalhes/" class="btn btn-default">Mais detalhes</a>
                        </div>
                    </div>

                    <div class="sticker sticker-sale"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn default">Fechar</button>
    </div>
</div>
